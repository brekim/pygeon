<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".activities.LessonOne">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabBar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#273a6e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="#87A4F3"
        app:tabIndicatorHeight="3sp"
        app:tabTextColor="#87A4F3">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab1L5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 1" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab2L5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 2" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab3L5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 3" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab4L5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 4" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#a1b1de"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabBar5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>